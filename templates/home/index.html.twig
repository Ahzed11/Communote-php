{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}Home{% endtrans %}
{% endblock %}

{% block body %}
    <section class="hero min-h-screen bg-gradient-to-t from-primary to-secondary-content p-8">
        <div class="text-center hero-content">
            <div class="max-w-md">
                <h1 class="text-7xl font-bold text-white break-all">
                    Communot√©
                </h1>
                <p class="text-xl font-semibold text-white mb-5">
                    {% trans %} home-subtitle {% endtrans %}
                </p>
                {% if not is_granted('ROLE_USER') %}
                    <div class="flex justify-center gap-x-4">
                        <a class="btn btn-primary" href="{{ path('login') }}">
                            {% trans %} Register {% endtrans %}
                        </a>
                        <a class="btn btn-secondary" href="{{ path('login') }}">
                            {% trans %} Sign In {% endtrans %}
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

    <section class="hero min-h-screen bg-neutral">
        <div class="h-full lg:p-0 flex flex-col lg:justify-center text-neutral-content">
            <h1 class="text-7xl font-bold text-center mb-1 text-neutral-content mb-16">
                {% trans %} why-communote {% endtrans %}
            </h1>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mx-auto container">
                <a href="https://github.com/Ahzed11/Communote"
                   target="_blank"
                   class="block rounded p-8 shadow hover:shadow-lg transform hover:scale-105 transition duration-300
                            bg-neutral-focus">
                    <div class="flex justify-center mb-2">
                        <i class="fab fa-github text-6xl"></i>
                    </div>
                    <h2 class="text-center font-semibold text-3xl mb-4">
                        Open Source
                    </h2>
                    <p class="text-justify">
                        {% trans %} why-communote-opensource {% endtrans %}
                    </p>
                </a>

                <div class="block rounded p-8 shadow hover:shadow-lg transform hover:scale-105 transition duration-300
                            bg-neutral-focus">
                    <div class="flex justify-center mb-2">
                        <i class="fas fa-user-shield text-6xl"></i>
                    </div>
                    <h2 class="text-center font-semibold text-3xl mb-4">
                        {% trans %} why-communote-personal-data-title {% endtrans %}
                    </h2>
                    <p class="text-justify">
                        {% trans %} why-communote-personal-data {% endtrans %}
                    </p>
                </div>

                <div class="block rounded p-8 shadow hover:shadow-lg transform hover:scale-105 transition duration-300
                            bg-neutral-focus">
                    <div class="flex justify-center mb-2">
                        <i class="far fa-hand-peace text-6xl"></i>
                    </div>
                    <h2 class="text-center font-semibold text-3xl mb-4">
                        {% trans %} why-communote-ease-of-use-title {% endtrans %}
                    </h2>
                    <p class="text-justify">
                        {% trans %} why-communote-ease-of-use {% endtrans %}
                    </p>
                </div>

                <a href="https://www.communote.be/api"
                   target="_blank"
                   class="block rounded p-8 shadow hover:shadow-lg transform hover:scale-105 transition duration-300
                            bg-neutral-focus">
                    <div class="flex justify-center mb-2">
                        <i class="fas fa-book text-6xl"></i>
                    </div>
                    <h2 class="text-center font-semibold text-3xl mb-4">
                        API
                    </h2>
                    <p class="text-justify">
                        {% trans %} why-communote-api {% endtrans %}
                    </p>
                </a>
            </div>
        </div>
    </section>
{% endblock %}
