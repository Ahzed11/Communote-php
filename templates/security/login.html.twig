{% extends 'form-center.html.twig' %}

{% block Title %}{% trans %}Sign In{% endtrans %}{% endblock %}

{% block formTitle %}{% trans %}Sign In{% endtrans %}{% endblock %}

{% block form %}
    {% if error %}
        <div class="">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="flex flex-col align-center space-y-2">
            <p class="self-center">{% trans %}You are Signed In as{% endtrans %} {{ app.user.userIdentifier }}</p>
            <a class="button primary self-center" href="{{ path('logout') }}">
                {% trans %}Sign Out{% endtrans %}
            </a>
        </div>
    {% else %}
        <div class="flex flex-col space-y-4 justify-center">
            <a href="{{ path('connect_azure_start') }}" class=" flex align-center justify-center">
                <img src="{{ asset('build/images/ms-light.png') }}" alt="Microsoft Logo"/>
            </a>
            <a href="{{ path('connect_google_start') }}" class=" flex justify-center">
                <img src="{{ asset('build/images/google-light.png') }}" alt="Google Logo"/>
            </a>
        </div>
    {% endif %}
